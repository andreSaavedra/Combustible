<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="368dp"
    android:layout_height="495dp"
    android:layout_weight="1"
    android:background="@color/colorPrimaryDark"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.intel.combustible.Ajustes"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="8dp">


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorplomo">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cambiaridioma"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/colorplomotexto" />
    </TableRow>

    <TableRow
        android:layout_width="655dp"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:background="@color/colorPrimaryDark">

        <Button
            android:id="@+id/English"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/verdefondo"
            android:text="@string/boton_de_idioma1"
            android:textColor="@color/colorblancotexto" />

        <Button
            android:id="@+id/EspaÃ±ol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@color/verdefondo"
            android:text="@string/boton_de_idioma2"
            android:textColor="@color/colorblancotexto" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:background="@color/colorplomo">

        <Button
            android:id="@+id/politicas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/rojofondo"
            android:text="@string/politicas_y_privacidad"
            android:textColor="@color/colorblancotexto" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:background="@color/colorplomo">

        <Button
            android:id="@+id/cerrarsesion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/rojofondo"
            android:text="@string/cerrar_sesion"
            android:textColor="@color/colorblancotexto" />

    </TableRow>

</TableLayout>

