<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorplomo"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.intel.combustible.filtro"
    tools:showIn="@layout/activity_filtro">

    <Spinner
        android:id="@+id/combustible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView5"
        android:entries="@array/Combustible" />

    <Spinner
        android:id="@+id/spinner4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView6"
        android:entries="@array/spinner4"
        android:spinnerMode="dropdown" />

    <Spinner
        android:id="@+id/spinner5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView7"
        android:entries="@array/spinner5"
        android:spinnerMode="dropdown" />

    <Spinner
        android:id="@+id/spinner6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView8"
        android:entries="@array/spinner6"
        android:spinnerMode="dropdown" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/spinner6"
        android:layout_marginTop="35dp"
        android:background="@color/verdefondo"
        android:text="@string/buscar"
        android:textColor="@color/colorblancotexto" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="73dp" />

    <TextView
        android:id="@+id/barraKM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/seekBar"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView"
        android:layout_centerHorizontal="true"
        android:text="@string/Rango"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorplomotexto" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/combustible"
        android:layout_marginTop="21dp"
        android:text="@string/Seleccionar_Tipo_de_Combustible"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorplomotexto"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="94dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/spinner4"
        android:layout_marginTop="23dp"
        android:text="@string/Selecionar_Empresa_Gasolinera"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorplomotexto"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="144dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:text="@string/Seleccionar_Tipo_de_Combustible"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorplomotexto" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/spinner5"
        android:layout_marginTop="22dp"
        android:text="@string/Selecionar_Orden_de_Precios"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorplomotexto" />

</RelativeLayout>

